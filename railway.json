{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "node railway-diagnostic.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "region": "us-west1"
  },
  "envVars": {
    "NODE_ENV": "production",
    "PORT": "${{PORT}}"
  }
}