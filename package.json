{
  "name": "mcp-platform",
  "version": "1.0.0",
  "description": "Multi-domain MCP platform with DAX abstraction layer and generic analytics tools",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index-claude.ts",
    "dev:http": "tsx watch src/index-http.ts",
    "build": "echo 'Using JavaScript files directly - no build needed'",
    "clean": "rimraf dist/",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:auth": "npm run build && node dist/test-auth.js",
    "test:dax": "npm run build && node dist/test-dax.js",
    "start": "node src/index-railway.js",
    "start:http": "node src/index-railway.js",
    "start:railway": "node src/index-railway.js",
    "validate:schema": "tsx scripts/validation/validate-schema.ts",
    "create:domain": "tsx scripts/migration/create-domain.ts",
    "package:mcpb": "tsx scripts/deployment/package-mcpb.ts",
    "deploy:railway": "railway up"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "powerbi",
    "analytics",
    "multi-domain",
    "typescript",
    "enterprise"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@azure/msal-node": "^2.0.0",
    "axios": "^1.6.0",
    "dotenv": "^16.0.0"
  }
}
